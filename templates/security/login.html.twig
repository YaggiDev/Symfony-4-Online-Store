{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('login') }}">Logout</a>
    <h1>Login page! ✅</h1>
    {% if error %}
        <span class="error" style="color:red">{{ error.messageKey}}</span>
    {% endif %}
    <form action="{{ path('login') }}" method="POST">
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Nazwa użytkownika" autofocus>
        <input type="password" name="_password"  placeholder="Hasło">

        <button type="submit">Submit!</button>
    </form>
</div>
{% endblock %}
